<div class="header"></div>
  <% if notice %>
    <div class="alert-container">
      <div class="notice">
        <%= notice %>
        <div class="close-x">x</div>
      </div> 
    </div>
  <% end %>
  <% if alert %>
    <div class="alert">
      <%= alert %>
      <div class="close-x">x</div>
    </div>
  <% end %>
  <% if current_user %>
    <div class="email"></div>
      <%= current_user.email %>
    <div class="logout">
      <%= link_to "Logout", destroy_user_session_path, method: :delete%>
    </div>
      
  <% else %>
    <div class="login">
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    </div>
  <% end %>
      

<h1>Welcome to LoL Challenger</h1>
